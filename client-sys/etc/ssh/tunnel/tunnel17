#
# Tunnel 17 to server
#
Host tunnel17
    HostName {server.host}
    Port 22
    User root
    IdentityFile /etc/ssh/tunkey/id_tun17
    IdentitiesOnly yes
    Batchmode yes
    Tunnel point-to-point
    TunnelDevice 17
    RequestTTY no
    ExitOnForwardFailure yes
    ServerAliveInterval 5
    ServerAliveCountMax 2
    #
    # If you dont want to use network managers, open next options
    #
    # PermitLocalCommand yes
    # LocalCommand ip a add 192.168.17.2/32 peer 192.168.17.1 dev %T && ip link set %T up alias tunnel_to_server
    # RemoteCommand ip a add 192.168.17.1/32 peer 192.168.17.2 dev $SSH_TUNNEL && ip link set $SSH_TUNNEL up alias tunnel_from_client

